<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.dam.adp.fitness360proyecto3eval.controller.LoginController"
      stylesheets="@../css/styles.css">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
  </padding>

  <Label text="Fitness360 - Login" style="-fx-font-weight: bold;">
    <font>
      <Font size="24.0" />
    </font>
  </Label>

  <VBox spacing="10.0" alignment="CENTER" maxWidth="300.0">
    <Label text="Nombre de Usuario:" />
    <TextField fx:id="usernameField" promptText="Ingrese su nombre de usuario" />

    <Label text="Contraseña:" />
    <PasswordField fx:id="passwordField" promptText="Ingrese su contraseña" />

    <Label fx:id="errorMessage" textFill="RED" visible="false" />

    <HBox spacing="10.0" alignment="CENTER">
      <padding>
        <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
      </padding>
      <Button text="Iniciar Sesión" onAction="#onLoginButtonClick" defaultButton="true" />
    </HBox>
  </VBox>
</VBox>
