<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="20.0" stylesheets="@../css/styles.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="com.dam.adp.fitness360proyecto3eval.controller.LoginController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>

  <Label style="-fx-font-weight: bold;" text="Fitness360 - Login">
    <font>
      <Font size="24.0" />
    </font>
  </Label>

  <VBox alignment="CENTER" maxWidth="300.0" spacing="10.0">
    <Label text="Nombre de Usuario:" />
    <TextField fx:id="usernameField" promptText="Ingrese su nombre de usuario" />

    <Label text="Contraseña:" />
    <PasswordField fx:id="passwordField" promptText="Ingrese su contraseña" />

    <Label fx:id="errorMessage" visible="false" />

    <HBox alignment="CENTER" spacing="10.0">
      <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </padding>
      <Button defaultButton="true" onAction="#alHacerClicEnIniciarSesion" text="Iniciar Sesión" />
    </HBox>

    <HBox alignment="CENTER" spacing="5.0">
      <Label text="¿No tienes cuenta?" />
      <Button onAction="#alHacerClicEnRegistrarse" text="Registrarse" />
    </HBox>
  </VBox>
</VBox>
